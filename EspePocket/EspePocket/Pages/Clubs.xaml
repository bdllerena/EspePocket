<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EspePocket.Pages.Clubs"
             xmlns:controls="clr-namespace:EspePocket.Pages;assembly=EspePocket"
             xmlns:xfg="clr-namespace:XFGloss;assembly=XFGloss"
             Title="Clubs">
    <xfg:ContentPageGloss.BackgroundGradient>
        <xfg:Gradient Rotation="180">
            <xfg:GradientStep StepColor="#1B5E20  " StepPercentage="0.5" />
            <xfg:GradientStep StepColor="#388E3C " StepPercentage="1" />
        </xfg:Gradient>
    </xfg:ContentPageGloss.BackgroundGradient>
    <ContentPage.Content>
        <StackLayout>
            <Button Image="clubes.png" TextColor="White" FontSize="Small" FontAttributes="Bold" BackgroundColor="#A5D6A7" Clicked="Add_Club" Text="¿No ves tú club? Agregalo aquí.. "/>

            <ScrollView Orientation="Vertical">
                <Grid>
                    <controls:MainPageButton Grid.Row="0" Grid.Column="0" Icon="cse.png" Label="CSE - CiberSeguridad">
                        <controls:MainPageButton.GestureRecognizers>
                            <TapGestureRecognizer Tapped="See_Ces" />
                        </controls:MainPageButton.GestureRecognizers>
                    </controls:MainPageButton>
                </Grid>

            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>